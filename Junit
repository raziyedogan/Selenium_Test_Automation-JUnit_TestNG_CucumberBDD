package Part_02;

import io.github.bonigarcia.wdm.WebDriverManager;
import org.junit.jupiter.api.Test;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;

import java.time.Duration;

public class P01_Junit {

    //With Junit, we use the “@Test public void Test(){}” structure instead of the “public static void main(String[] args){}” block.
    @Test
    public void Test(){
        WebDriverManager.chromedriver().setup();
        WebDriver driver = new ChromeDriver();
        driver.manage().window().maximize();
        driver.manage().timeouts().implicitlyWait(Duration.ofSeconds(15));
        driver.get("https://www.google.com");
    }

    //For example, we have two test scenarios. Or one test scenario has several steps. In such cases, a separate test block can be written for each case or each step, and each test block can be run independently.
    //Run "public class P01_Junit" if We want to test class level. Then all test blocks run
    @Test
    public void Test1(){
        WebDriverManager.chromedriver().setup();
        WebDriver driver = new ChromeDriver();
        driver.manage().window().maximize();
        driver.manage().timeouts().implicitlyWait(Duration.ofSeconds(15));
        driver.get("https://www.walmart.com");
    }
}
